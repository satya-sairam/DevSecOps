pipeline {
    agent any
    
    stages {
    
        stage('Scan with Trivy') {
            steps {
                script {
                    // Install Trivy
                    sh '''
                        trivy --version
                        trivy image -f json -0 results.json --vuln-type os --severity HIGH,CRITICAL centos:7
                       

                    
                    '''

                }
            }
        }
    }
    

}
