pipeline {
    agent any
    
    stages {
    
        stage('Scan with Trivy') {
            steps {
                script {
                    // Install Trivy
                    sh '''
                        sudo docker run -d aquasec/trivy:0.18.3
                        trivy image --severity HIGH,CRITICAL nginx:1.24.0-alpine
                        trivy --version


                    
                    '''

                }
            }
        }
    }
    

}
